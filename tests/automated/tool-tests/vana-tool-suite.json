{
  "test_suites": {
    "echo_function": {
      "description": "Test the basic echo functionality",
      "tests": [
        {
          "id": "ECHO-001",
          "name": "Basic Echo Test",
          "input": "echo hello world",
          "expected_status": "echoed",
          "expected_keywords": ["hello world"],
          "timeout": 5000
        },
        {
          "id": "ECHO-002",
          "name": "Echo with Special Characters",
          "input": "echo test@#$%^&*()",
          "expected_status": "echoed",
          "expected_keywords": ["test@#$%^&*()"],
          "timeout": 5000
        },
        {
          "id": "ECHO-003",
          "name": "Echo with Numbers",
          "input": "echo 12345 test numbers",
          "expected_status": "echoed",
          "expected_keywords": ["12345 test numbers"],
          "timeout": 5000
        },
        {
          "id": "ECHO-004",
          "name": "Long Message Echo",
          "input": "echo This is a longer message to test the echo function with extended content that spans multiple words",
          "expected_status": "echoed",
          "expected_keywords": ["longer message", "extended content"],
          "timeout": 10000
        }
      ]
    },
