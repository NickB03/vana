  "test_configuration": {
    "default_timeout": 10000,
    "retry_attempts": 3,
    "retry_delay": 2000,
    "parallel_execution": false,
    "screenshot_on_failure": true,
    "console_log_capture": true
  },
  "validation_rules": {
    "response_time_threshold": 30000,
    "success_criteria": {
      "must_contain_keywords": true,
      "must_have_response": true,
      "no_error_messages": true
    },
    "failure_criteria": {
      "timeout_exceeded": true,
      "error_in_response": true,
      "missing_expected_keywords": true
    }
  },
  "reporting": {
    "generate_html_report": true,
    "include_screenshots": true,
    "include_console_logs": true,
    "save_raw_responses": true
  }
}
