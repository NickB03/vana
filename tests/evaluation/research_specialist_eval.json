{
  "evaluation_set": "research_specialist",
  "version": "1.0.0",
  "description": "Evaluation scenarios for Research Specialist",
  "scenarios": [
    {
      "id": "rs_001",
      "name": "Academic Research",
      "request": "Research recent advances in quantum computing error correction methods",
      "expected_tools": [
        "web_search_advanced",
        "analyze_sources",
        "extract_facts",
        "validate_information",
        "synthesize_findings",
        "generate_citations"
      ],
      "expected_outputs": {
        "source_types": [".edu", "peer-reviewed", "arxiv"],
        "fact_types": ["statistics", "claims", "dates"],
        "synthesis_format": "structured",
        "citation_style": "ieee"
      },
      "evaluation_criteria": {
        "source_quality": "Primarily academic sources",
        "depth": "Multiple error correction methods covered",
        "recency": "Sources from last 2 years",
        "accuracy": "Technically correct information"
      }
    },
    {
      "id": "rs_002",
      "name": "Market Research",
      "request": "Research the current state and growth projections of the renewable energy market",
      "expected_tools": [
        "web_search_advanced",
        "analyze_sources",
        "extract_facts",
        "synthesize_findings"
      ],
      "expected_outputs": {
        "data_points": ["market_size", "growth_rate", "key_players", "trends"],
        "source_credibility": 70,
        "synthesis_format": "comparison"
      },
      "evaluation_criteria": {
        "data_completeness": "Key market metrics included",
        "source_diversity": "Multiple perspectives",
        "trend_analysis": "Future projections included",
        "geographical_coverage": "Global and regional data"
      }
    },
    {
      "id": "rs_003",
      "name": "Fact Checking",
      "request": "Verify the claim: 'Electric vehicles now account for 30% of new car sales in Europe'",
      "expected_tools": [
        "web_search_advanced",
        "analyze_sources",
        "validate_information"
      ],
      "expected_outputs": {
        "validation_result": ["verified", "contradicted", "partial"],
        "confidence_level_min": 70,
        "supporting_evidence": true
      },
      "evaluation_criteria": {
        "source_authority": "Official statistics preferred",
        "verification_depth": "Multiple sources checked",
        "nuance": "Regional variations noted",
        "clarity": "Clear verdict with evidence"
      }
    },
    {
      "id": "rs_004",
      "name": "Literature Review",
      "request": "Conduct a literature review on the psychological impacts of remote work",
      "expected_tools": [
        "web_search_advanced",
        "analyze_sources",
        "extract_facts",
        "synthesize_findings",
        "generate_citations"
      ],
      "expected_outputs": {
        "source_count_min": 10,
        "themes": ["productivity", "wellbeing", "work-life balance"],
        "citation_style": "apa",
        "synthesis_format": "narrative"
      },
      "evaluation_criteria": {
        "comprehensiveness": "Major themes covered",
        "balance": "Positive and negative impacts",
        "methodology": "Study quality assessed",
        "citations": "Proper APA formatting"
      }
    },
    {
      "id": "rs_005",
      "name": "Competitive Analysis",
      "request": "Research and compare the top 5 cloud computing providers' AI/ML offerings",
      "expected_tools": [
        "web_search_advanced",
        "analyze_sources",
        "extract_facts",
        "synthesize_findings"
      ],
      "expected_outputs": {
        "providers": ["AWS", "Google Cloud", "Azure", "IBM", "Oracle"],
        "comparison_points": ["services", "pricing", "performance", "ease_of_use"],
        "synthesis_format": "comparison"
      },
      "evaluation_criteria": {
        "completeness": "All major providers covered",
        "objectivity": "Balanced comparison",
        "recency": "Current offerings only",
        "actionability": "Clear recommendations"
      }
    }
  ],
  "tool_usage_patterns": {
    "common_workflows": [
      {
        "name": "comprehensive_research",
        "sequence": ["web_search_advanced", "analyze_sources", "extract_facts", "validate_information", "synthesize_findings", "generate_citations"]
      },
      {
        "name": "quick_fact_check",
        "sequence": ["web_search_advanced", "validate_information"]
      },
      {
        "name": "source_analysis",
        "sequence": ["web_search_advanced", "analyze_sources", "extract_facts", "synthesize_findings"]
      }
    ]
  },
  "performance_benchmarks": {
    "response_time_ms": {
      "p50": 3000,
      "p95": 7000,
      "p99": 10000
    },
    "quality_metrics": {
      "source_credibility_avg": 75,
      "fact_accuracy": 95,
      "synthesis_coherence": 90
    }
  },
  "edge_cases": [
    {
      "id": "edge_001",
      "description": "No credible sources available",
      "request": "Research the effectiveness of crystal healing for cancer treatment",
      "expected_behavior": "Report lack of scientific evidence, suggest alternative topics"
    },
    {
      "id": "edge_002",
      "description": "Rapidly changing information",
      "request": "Research today's stock market movements",
      "expected_behavior": "Note time sensitivity, use latest available data"
    },
    {
      "id": "edge_003",
      "description": "Contradictory sources",
      "request": "Research the health effects of coffee consumption",
      "expected_behavior": "Present both sides, note contradictions, assess source quality"
    },
    {
      "id": "edge_004",
      "description": "Highly technical topic",
      "request": "Research P vs NP problem recent developments",
      "expected_behavior": "Use academic sources, maintain accuracy, explain complexity"
    }
  ],
  "search_filter_patterns": {
    "academic": {
      "domains": [".edu", ".ac.uk", "arxiv.org", "scholar.google.com"],
      "file_types": ["pdf"],
      "date_range": "last_2_years"
    },
    "business": {
      "domains": [".com", ".org"],
      "exclude": ["wikipedia", "blogs"],
      "date_range": "last_year"
    },
    "government": {
      "domains": [".gov", ".mil"],
      "file_types": ["pdf", "html"],
      "credibility_boost": 15
    }
  }
}