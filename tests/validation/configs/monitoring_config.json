{
  "performance_monitoring": {
    "enabled": true,
    "metrics": [
      "response_time",
      "memory_usage",
      "success_rate"
    ],
    "collection_interval": 1.0,
    "retention_period": 86400
  },
  "regression_detection": {
    "enabled": true,
    "thresholds": {
      "minor": 5.0,
      "moderate": 15.0,
      "major": 30.0,
      "critical": 50.0
    },
    "detection_window": 10
  },
  "alerting": {
    "enabled": true,
    "alert_on_regression": true,
    "alert_on_failure": true
  }
}
