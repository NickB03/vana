# M3 MacBook Air Auto-Optimization Environment Variables
# These are automatically loaded when Claude Code detects SPARC/agent usage

# System Detection
SYSTEM_MODEL="M3_MACBOOK_AIR"
SYSTEM_RAM_GB=16
OPTIMIZATION_ENABLED=true

# Claude Flow Defaults
CLAUDE_FLOW_MAX_AGENTS=4
CLAUDE_FLOW_DEFAULT_AGENTS=3
CLAUDE_FLOW_MEMORY_LIMIT=1200
CLAUDE_FLOW_WAVE_DEPLOY=true
CLAUDE_FLOW_WAVE_SIZE=2
CLAUDE_FLOW_WAVE_DELAY=2000
CLAUDE_FLOW_RESOURCE_POOL=true
CLAUDE_FLOW_AUTO_SCALE=true
CLAUDE_FLOW_CHECKPOINT=true
CLAUDE_FLOW_CHECKPOINT_INTERVAL=30000
CLAUDE_FLOW_MONITOR=true

# Agent Memory Limits (MB)
AGENT_MEMORY_LIGHTWEIGHT=300
AGENT_MEMORY_STANDARD=400
AGENT_MEMORY_HEAVY=500

# Performance Thresholds
MEMORY_WARNING_THRESHOLD=0.75
MEMORY_CRITICAL_THRESHOLD=0.85
MEMORY_EMERGENCY_THRESHOLD=0.95
CPU_WARNING_THRESHOLD=0.80
CPU_CRITICAL_THRESHOLD=0.90

# Auto Recovery
AUTO_RECOVERY_ENABLED=true
AUTO_CHECKPOINT_ENABLED=true
EMERGENCY_KILL_AT_95=true
GRACEFUL_DEGRADATION=true

# Node.js Optimizations
NODE_OPTIONS="--max-old-space-size=2048"
NODE_ENV=production

# VS Code Integration
VSCODE_DISABLE_EXTENSIONS_DURING_SWARM=false
VSCODE_MEMORY_LIMIT=4096

# Logging
SPARC_LOG_LEVEL=info
SPARC_LOG_FILE=.claude_workspace/logs/sparc-auto.log
SPARC_MONITOR_AUTO_START=true