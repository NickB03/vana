{
  "version": "1.0.0",
  "description": "Claude Code hooks for shadcn UI component validation",
  "hooks": {
    "pre-edit": [
      {
        "name": "shadcn-ui-validator",
        "description": "Prevents manual UI component creation",
        "pattern": "**/components/ui/**/*.{tsx,jsx,ts,js}",
        "command": "bash scripts/shadcn-validator.sh ${file} edit",
        "blocking": true,
        "enabled": true
      }
    ],
    "pre-write": [
      {
        "name": "shadcn-creation-blocker",
        "description": "Blocks creating new UI components manually",
        "pattern": "**/components/ui/**/*.{tsx,jsx,ts,js}",
        "command": "bash scripts/shadcn-validator.sh ${file} create",
        "blocking": true,
        "enabled": true
      }
    ],
    "post-edit": [
      {
        "name": "shadcn-import-checker",
        "description": "Verifies shadcn imports are correct",
        "pattern": "**/*.{tsx,jsx,ts,js}",
        "command": "grep -l '@/components/ui/' ${file} > /dev/null && echo 'âœ… shadcn imports verified' || true",
        "blocking": false,
        "enabled": true
      }
    ],
    "pre-command": [
      {
        "name": "shadcn-cli-suggester",
        "description": "Suggests shadcn CLI for UI operations",
        "pattern": "^(create|add|new).*(component|ui|button|card|form)",
        "command": "echo 'ðŸ’¡ Remember to use: npx shadcn@latest add @shadcn/[component]'",
        "blocking": false,
        "enabled": true
      }
    ]
  },
  "config": {
    "shadcn": {
      "cli_version": "3.0.0",
      "components_path": "frontend/src/components/ui",
      "config_file": "frontend/components.json",
      "installed_components": [
        "alert", "avatar", "badge", "button", "card", "dialog",
        "dropdown-menu", "form", "icons", "input", "label", "progress",
        "scroll-area", "select", "separator", "sheet", "sidebar",
        "skeleton", "tabs", "tooltip"
      ]
    },
    "bypass": {
      "environment_variable": "SHADCN_BYPASS",
      "silent_mode": "SHADCN_SILENT"
    }
  }
}