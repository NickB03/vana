# Vana Frontend Environment Configuration Template
# Copy this file to .env.local and fill in the values

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000
NEXT_PUBLIC_SSE_URL=http://localhost:8000

# Environment
NEXT_PUBLIC_ENVIRONMENT=development

# Feature Flags
NEXT_PUBLIC_ENABLE_CANVAS=true
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_AGENTS=true
NEXT_PUBLIC_ENABLE_AUTH=true

# Google OAuth (if using direct frontend auth)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=<optional-google-client-id>

# Analytics (optional)
NEXT_PUBLIC_GA_ID=<optional-google-analytics-id>

# Monaco Editor CDN (optional, for fallback)
NEXT_PUBLIC_MONACO_CDN=https://cdn.jsdelivr.net/npm/monaco-editor@0.44.0

# Development Settings
NEXT_PUBLIC_DEBUG=true
NEXT_PUBLIC_LOG_LEVEL=debug