# VANA ADK Memory Development Configuration Template
# Copy this file to .env and update values as needed

# Google Cloud Configuration (REQUIRED)
GOOGLE_CLOUD_PROJECT=analystai-454200
GOOGLE_CLOUD_LOCATION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=/path/to/vana-service-account-key.json
GOOGLE_GENAI_USE_VERTEXAI=True

# ADK Memory Configuration (REQUIRED)
ADK_RAG_CORPUS=projects/analystai-454200/locations/us-central1/ragCorpora/vana-corpus
ADK_SIMILARITY_TOP_K=3
ADK_VECTOR_DISTANCE_THRESHOLD=0.6
ADK_SESSION_SERVICE_TYPE=memory

# Environment Configuration
VANA_ENV=development

# Vector Search Configuration (OPTIONAL - Preserved from legacy)
VECTOR_SEARCH_ENDPOINT_ID=your-endpoint-id
DEPLOYED_INDEX_ID=vanasharedindex

# Performance Configuration (DEVELOPMENT OPTIMIZED)
ADK_MEMORY_CACHE_SIZE=500
ADK_MEMORY_CACHE_TTL=1800
ADK_MAX_CONCURRENT_REQUESTS=5
ADK_REQUEST_TIMEOUT=30
ADK_RETRY_ATTEMPTS=2
ADK_BACKOFF_FACTOR=1.5

# Logging Configuration (DEVELOPMENT)
LOG_LEVEL=DEBUG
LOG_FORMAT=text
LOG_FILE=./logs/vana-dev.log

# Security Configuration (RELAXED FOR DEVELOPMENT)
ADK_ENABLE_TLS=false
ADK_TLS_VERIFY=false

# Monitoring Configuration (DEVELOPMENT)
ADK_METRICS_ENABLED=true
ADK_CONFIG_MONITORING=true
ADK_CONFIG_LOG_CHANGES=true
ADK_HEALTH_CHECK_INTERVAL=60

# Multi-Agent Configuration
VANA_AGENT_COUNT=5
VANA_TOOL_COUNT=30
VANA_ENABLE_PERFORMANCE_MONITORING=true
VANA_DEBUG_MODE=true
