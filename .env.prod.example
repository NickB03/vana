# Production Environment Variables Template
# Copy this file to .env.prod and fill in your actual values
#
# IMPORTANT: Any variable starting with NEXT_PUBLIC_ is exposed to the browser.
# Never put secrets in NEXT_PUBLIC_* variables.

# Database Configuration (use managed database service in production)
POSTGRES_USER=vana_prod
POSTGRES_PASSWORD=your-secure-database-password
POSTGRES_DB=vana_production
POSTGRES_URL=postgresql://vana_prod:your-secure-password@your-db-host:5432/vana_production

# Redis Configuration (use managed Redis service in production)
REDIS_URL=redis://your-redis-host:6379
REDIS_PASSWORD=your-secure-redis-password

# Authentication Secrets (generate secure random strings)
AUTH_SECRET=your-super-secure-production-secret-at-least-32-characters-long
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=your-super-secure-production-secret-at-least-32-characters-long

# API Keys (obtain from respective providers)
XAI_API_KEY=your-production-xai-api-key
BLOB_READ_WRITE_TOKEN=your-production-vercel-blob-token

# VANA Backend Configuration
VANA_BASE_URL=http://backend:8080
NEXT_PUBLIC_VANA_BASE_URL=https://your-domain.com

# CORS Configuration
# Note: Do NOT reference another var here; .env values aren't expanded.
FRONTEND_URL=https://your-domain.com
ALLOW_ORIGINS=https://your-domain.com

# Google Cloud Configuration
GOOGLE_PROJECT_ID=your-production-project-id
# Mount this file via Docker secrets or a readonly volume.
GOOGLE_APPLICATION_CREDENTIALS=/run/secrets/gcp_service_account.json

# Optional: Monitoring and Logging
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Optional: Performance
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1
