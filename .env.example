# VANA Project Environment Variables - Example File
# Copy this file to .env and fill in your actual credentials
# For better security, consider using secrets/.env instead

# Environment Type
VANA_ENV="development"  # Options: development, production, test

# Google Cloud Project Details
GOOGLE_CLOUD_PROJECT="analystai-454200"
GOOGLE_CLOUD_REGION="us-central1"
GOOGLE_CLOUD_LOCATION="us-central1"
GOOGLE_STORAGE_BUCKET="analystai-454200-storage"
GOOGLE_APPLICATION_CREDENTIALS="./secrets/vana-vector-search-sa.json"

# API Keys
GEMINI_API_KEY="your_gemini_api_key_here"
BACKEND_API_KEY="your_backend_api_key_here"
GOOGLE_SEARCH_API_KEY="your_google_search_api_key_here"
GOOGLE_SEARCH_CX="your_search_engine_id_here"

# --- Firebase Admin SDK Credentials ---
# Explicitly define these to satisfy the test script and Node.js script needs
FIREBASE_PROJECT_ID="analystai-454200" # Should match GOOGLE_CLOUD_PROJECT & your Firebase project ID
FIREBASE_CLIENT_EMAIL="your_firebase_client_email_here"
FIREBASE_PRIVATE_KEY="your_firebase_private_key_here"

# DOC AI for processing
PROCESSOR_ID="your_processor_id_here"
LOCATION="us"

# ADK Configuration
GOOGLE_GENAI_USE_VERTEXAI="True"
MODEL="gemini-2.0-flash"
VECTOR_SEARCH_INDEX_NAME="vana-shared-index"
VECTOR_SEARCH_INDEX_ID="vana-shared-index"
VECTOR_SEARCH_DIMENSIONS="768"
VECTOR_SEARCH_ENDPOINT_ID="projects/960076421399/locations/us-central1/indexEndpoints/5085685481161621504"
DEPLOYED_INDEX_ID="vanasharedindex"

# Legacy Ragie API Key (deprecated)
RAGIE_API_KEY="your_ragie_api_key_here"

# Hybrid search
HYBRID_SEARCH_WEB_WEIGHT="0.3"

# MCP Memory Configuration
MCP_API_KEY="your_mcp_api_key_here"
MCP_ENDPOINT="https://mcp.community.augment.co"
MCP_NAMESPACE="vana-project"
USE_LOCAL_MCP="false"  # Set to "true" to use local MCP server

# Memory Manager Configuration
MEMORY_SYNC_INTERVAL="300"  # 5 minutes
MEMORY_CACHE_SIZE="1000"
MEMORY_CACHE_TTL="3600"  # 1 hour
VANA_DATA_DIR="./data"

# Entity Scorer Configuration
ENTITY_HALF_LIFE_DAYS="30"

# Hybrid Search Configuration
VECTOR_SEARCH_WEIGHT="0.7"
KNOWLEDGE_GRAPH_WEIGHT="0.3"
DEFAULT_TOP_K="5"

# n8n Configuration
N8N_API_URL="http://localhost:5678/api/v1"
N8N_API_KEY="your_n8n_api_key_here"
N8N_WEBHOOK_USERNAME="your_webhook_username"
N8N_WEBHOOK_PASSWORD="your_webhook_password"
N8N_WEBHOOK_URL="http://localhost:5678/webhook/save-memory"
USE_LOCAL_N8N="true"  # Set to "true" to use local n8n server

# Security Configuration
VANA_MASTER_KEY="your_master_encryption_key_here"  # For credential encryption
AUDIT_LOG_DIR="./logs/audit"
STRUCTURED_LOG_DIR="./logs/app"
HEALTH_CHECK_INTERVAL="60"  # Seconds between health checks
CIRCUIT_BREAKER_RESET_TIMEOUT="60"  # Seconds before circuit breaker resets

# Web Search Configuration
WEB_SEARCH_MAX_RESULTS="5"
WEB_SEARCH_WEIGHT="0.3"

# Debug Configuration
DEBUG="false"
