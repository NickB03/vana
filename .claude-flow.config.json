{
  "version": "3.0.0",
  "sdk": {
    "anthropic": {
      "enabled": true,
      "integration": "@anthropic-ai/claude-code",
      "mode": "orchestration"
    }
  },
  "autoDetect": {
    "enabled": true,
    "systemProfiles": {
      "m3_macbook_air_16gb": {
        "detection": {
          "platform": "darwin",
          "arch": "arm64",
          "maxMemoryGB": 16
        },
        "defaults": {
          "maxAgents": 4,
          "defaultAgents": 3,
          "memoryLimitMB": 1200,
          "agentMemoryMB": 400,
          "retryPolicy": {
            "maxAttempts": 3,
            "initialDelay": 1000,
            "backoffMultiplier": 2
          },
          "waveDeployment": {
            "enabled": true,
            "waveSize": 2,
            "waveDelayMs": 2000
          },
          "resourcePooling": true,
          "autoScale": {
            "enabled": true,
            "minAgents": 2,
            "maxAgents": 4,
            "scaleDownThreshold": 0.85,
            "scaleUpThreshold": 0.60
          },
          "checkpoint": {
            "enabled": true,
            "intervalMs": 30000,
            "location": ".claude_workspace/checkpoints"
          },
          "monitoring": {
            "enabled": true,
            "autoStart": true,
            "intervalMs": 2000
          }
        }
      },
      "m3_macbook_air_24gb": {
        "detection": {
          "platform": "darwin",
          "arch": "arm64",
          "minMemoryGB": 20,
          "maxMemoryGB": 24
        },
        "defaults": {
          "maxAgents": 6,
          "defaultAgents": 5,
          "memoryLimitMB": 2000,
          "agentMemoryMB": 500,
          "retryPolicy": {
            "maxAttempts": 5,
            "initialDelay": 1000,
            "backoffMultiplier": 2
          }
        }
      },
      "standard": {
        "detection": {
          "default": true
        },
        "defaults": {
          "maxAgents": 8,
          "defaultAgents": 5,
          "memoryLimitMB": 4000,
          "agentMemoryMB": 600,
          "retryPolicy": {
            "maxAttempts": 5,
            "initialDelay": 1000,
            "backoffMultiplier": 2
          }
        }
      }
    }
  },
  "sparc": {
    "autoOptimization": true,
    "modes": {
      "code": {
        "autoApply": ["memory-limit", "wave-deploy", "checkpoint"]
      },
      "swarm": {
        "autoApply": ["resource-pool", "auto-scale", "monitor"]
      },
      "hive": {
        "autoApply": ["smart-scaling", "memory-aware", "auto-checkpoint"]
      }
    },
    "commands": {
      "beforeRun": [
        "node .claude_workspace/bin/sparc-auto-wrapper.js check-health"
      ],
      "afterRun": [
        "node .claude_workspace/bin/sparc-auto-wrapper.js cleanup"
      ]
    }
  },
  "emergencyProtocols": {
    "enabled": true,
    "triggers": {
      "memoryThreshold": 0.95,
      "cpuThreshold": 0.95,
      "crashCount": 2
    },
    "actions": {
      "highMemory": "scale-down",
      "criticalMemory": "emergency-shutdown",
      "systemCrash": "auto-recovery"
    }
  },
  "logging": {
    "level": "info",
    "file": ".claude_workspace/logs/claude-flow.log",
    "rotation": {
      "maxSize": "10MB",
      "maxFiles": 5
    }
  }
}