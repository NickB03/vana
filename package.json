{
  "name": "vana-frontend",
  "version": "2.0.0",
  "description": "High-performance frontend for Vana AI platform with optimized React patterns",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "analyze": "ANALYZE=true npm run build",
    "performance:audit": "lighthouse http://localhost:3000 --output=json --output-path=./reports/lighthouse.json",
    "performance:audit:prod": "lighthouse https://vana-frontend.vercel.app --output=json --output-path=./reports/lighthouse-prod.json",
    "performance:baseline:regenerate": "node ../scripts/regenerate-performance-baselines.js",
    "performance:baseline:update": "node ../scripts/update-baseline-urls.js",
    "performance:budget": "bundlesize",
    "precommit": "npm run typecheck && npm run lint && npm run test:coverage"
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/react-query": "^5.89.0",
    "@types/node": "^20.19.16",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.0",
    "immer": "^10.0.3",
    "intersection-observer": "^0.12.2",
    "lucide-react": "^0.544.0",
    "next": "^15.5.3",
    "postcss": "^8.5.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "rehype-sanitize": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^2.6.0",
    "typescript": "^5.9.2",
    "use-stick-to-bottom": "^1.1.1",
    "uuid": "^13.0.0",
    "web-vitals": "^3.5.0",
    "zod": "^3.25.76",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^7.6.0",
    "@storybook/addon-links": "^7.6.0",
    "@storybook/react": "^9.1.6",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest-axe": "^3.5.9",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "bundlesize": "^0.18.1",
    "eslint": "^9.35.0",
    "eslint-config-next": "^14.1.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jest": "^30.1.3",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^30.1.2",
    "jsdom": "^24.0.0",
    "lighthouse": "^12.8.2",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "ts-node": "^10.9.2",
    "vitest": "^1.6.0",
    "msw": "^2.5.1",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "bundlesize": [
    {
      "path": ".next/static/chunks/framework-*.js",
      "maxSize": "50kb",
      "compression": "gzip"
    },
    {
      "path": ".next/static/chunks/main-*.js",
      "maxSize": "30kb",
      "compression": "gzip"
    },
    {
      "path": ".next/static/chunks/pages/*.js",
      "maxSize": "100kb",
      "compression": "gzip"
    },
    {
      "path": ".next/static/css/*.css",
      "maxSize": "20kb",
      "compression": "gzip"
    }
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": {
    "production": [
      ">0.3%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "keywords": [
    "vana",
    "ai",
    "chat",
    "performance",
    "react",
    "nextjs",
    "typescript",
    "shadcn-ui",
    "prompt-kit"
  ],
  "author": "Vana Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vana-team/vana-frontend.git"
  }
}
