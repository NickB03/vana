# Vana Root Environment Configuration Template
# Copy this file to .env.local and fill in the values

# API Keys (retrieve from Google Secret Manager)
BRAVE_API_KEY=<get-from-gsm-or-brave-dashboard>
OPENROUTER_API_KEY=<optional-if-using-openrouter>

# CORS Configuration (Frontend on port 3000)
ALLOW_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=analystai-454200

# Development Settings
NODE_ENV=development
LOG_LEVEL=debug

# Session Configuration
SESSION_TIMEOUT=3600
SESSION_SECRET=<generate-secure-secret>

# Debug Configuration (Optional)
# Access code for the Phoenix debug endpoint (/api/debug/phoenix)
# Only set this if you need access to internal system metrics
PHOENIX_DEBUG_CODE=<generate-secure-debug-code>